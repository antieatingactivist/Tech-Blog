        
      
        <div class="container">
            
            <div class="blog">
                <div class="title">
                    {{ post.title }}
                    <div class="post-info">
                        Posted by {{ post.user.username }} on {{format_date post.createdAt}}
                    </div>
                </div>
                <p>
                    {{ post.body }}
                </p>
              
            </div>
            
            {{#each post.comments as |comment|}}
            <div class="blog comment">
                <span class="comment-by">{{comment.user.username}}:</span> <span class="body">{{comment.body}}</span>
                <span class="posted-by">{{format_date comment.createdAt}}</span>
            </div>
            {{/each}}
            <div class="blog comment">
                <p>Comment Below:</p>
                <form class="form comment-form">
                    <input type="hidden" id="user_id" value={{userid}}>
                    <input type="hidden" id="post_id" value={{post.id}}>
                    <textarea id="comment"></textarea>
                    <button class="btn btn-primary" type="submit">submit</button>
                </form>

            </div>
            <div class="stripe comment"></div>
            <div class="stripe comment"></div>
          
        </div>


    
    <script src="/js/comment.js"></script>

